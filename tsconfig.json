{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "esModuleInterop": true,
        "rootDir": "./src",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}